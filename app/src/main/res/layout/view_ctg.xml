    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ctg_3"
            android:layout_margin="30dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ctg_33"/>


        <ImageView
            android:id="@+id/ctg_4"
            android:layout_margin="30dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ctg_44"/>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ctg_5"
            android:layout_margin="30dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ctg_55"/>


        <ImageView
            android:id="@+id/ctg_6"
            android:layout_margin="30dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ctg_66"/>


    </LinearLayout>

</LinearLayout>
